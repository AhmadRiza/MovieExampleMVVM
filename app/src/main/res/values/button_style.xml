<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MButton">
        <item name="android:background">@drawable/bg_button_accent</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/_24sdp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textRegular</item>

    </style>

    <style name="MButton.Secondary">
        <item name="android:background">@drawable/bg_button_accent_invert</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MButton.LoginMethod">
        <item name="android:background">@drawable/bg_button_login_method</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="MButton.Medium">
        <item name="android:minHeight">@dimen/_32sdp</item>
    </style>

    <style name="MButton.Secondary.Medium">
        <item name="android:minHeight">@dimen/_32sdp</item>
    </style>

    <style name="MRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/textSecondary</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

    <style name="MTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textRegular</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>